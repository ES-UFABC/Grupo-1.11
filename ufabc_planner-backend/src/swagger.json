{
  "openapi": "3.0.0",
  "info": {
    "title": "UFABCplanner Docs",
    "description": "Documentation for the UFABCplanner API",
    "version": "1.0.0"
  },

  "paths": {
    "/academicyears/": {
      "post": {
        "tag": ["academic Year"],
        "sumary": "create an academic year",
        "description": "creates a new academic year",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "year": {
                    "type": "string"
                  },
                  "startDate": {
                    "type": "string"
                  },
                  "endDate": {
                    "type": "string"
                  }
                },
                "example": {
                  "year": "2022",
                  "startDate": "2022-06-01",
                  "endDate": "2022-06-30"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "academic year already exists"
          }
        }
      }
    },

    "/academicyears/get/user": {
      "get": {
        "tag": ["academic Year"],
        "summary": "GET academic year by user",
        "description": "Returns an array of all academic years created by a specific user",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "year": {
                        "type": "string"
                      },
                      "startDate": {
                        "type": "string"
                      },
                      "endDate": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },

    "/academicyears/delete/{id}": {
      "delete": {
        "tag": ["academic Year"],

        "summary": "delete academic year",
        "description": "deletes an academic year from the database",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "academic year id",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "deleted"
          },
          "400": {
            "description": "academic year doesn't exist"
          }
        }
      }
    },
    "/academicyears/update/{id}": {
      "patch": {
        "tag": ["academic Year"],
        "summary": "updates academic year",
        "description": "updates an academic year startDate and endDate",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "academic year id",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "year": {
                    "type": "string"
                  },
                  "startDate": {
                    "type": "string"
                  },
                  "endDate": {
                    "type": "string"
                  }
                },
                "example": {
                  "year": "2022",
                  "startDate": "2022-06-01",
                  "endDate": "2022-06-30"
                }
              }
            }
          }
        },

        "responses": {
          "204": {
            "description": "Success"
          },
          "400": {
            "description": "academic year doesn't exist"
          }
        }
      }
    }
  },

  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
